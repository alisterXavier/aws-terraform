def app
pipeline {
    agent any
    tools {
        nodejs '21.7'
    }
    environment {
        DOCKERHUB_IMAGE_NAME = 'alisterxavier153/jenkins-test'
    }

    stages {
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    app = docker.build(DOCKERHUB_IMAGE_NAME, './jenkins-eks/')
                }
                echo 'Testijjjng..'
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', 'docker') {
                        app.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
    }
}
